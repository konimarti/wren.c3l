		"montecarlo": {
			"type": "executable",
			"sources": [ "example/montecarlo.c3" ]
		},
		"skynet": {
			"type": "executable",
			"sources": [ "wren.c3i", "example/skynet.c3" ]
		},
		"lovecraft": {
			"type": "executable",
			"sources": [ "wren.c3i", "example/lovecraft.c3" ]
		}
	}
