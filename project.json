	"version": "0.1.0",
	"output": "build",
	"sources": [ "*" ],
	"c-sources": [
		"csource/src/**"
	],
	"c-include-dirs": [
		"csource/src/include",
		"csource/src/vm",
		"csource/src/optional"
	],
	"targets": {
		"mandelbrot": {
			"type": "executable",
			"sources": [ "example/mandelbrot.c3" ]
